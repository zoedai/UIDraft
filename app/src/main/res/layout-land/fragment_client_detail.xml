<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal"
    tools:context="com.simbiosys.uidraft.ClientDetailFragment"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/address"
            android:inputType="textPostalAddress" />
        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/ok" />

        <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notesList"
                android:layout_toStartOf="@+id/btn_newnote" />

            <Button
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:text="@string/new_note"
                android:id="@+id/btn_newnote"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <Button
            android:id="@+id/btn_upcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/upcoming_travels"
            android:layout_below="@+id/btn_expense_report"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_expense_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expense_report"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/btn_upcoming" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emails"
            android:id="@+id/btn_emails"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sms"
            android:id="@+id/btn_sms"
            android:layout_below="@+id/btn_emails"
            android:layout_alignParentStart="true" />


    </RelativeLayout>


</LinearLayout>

